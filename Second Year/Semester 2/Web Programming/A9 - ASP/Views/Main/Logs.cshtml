@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>LogReports</title>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/site.js"></script>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div classs="container" id="showLogs">
            <table class="logTable table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Severity</th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Logtext</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="buttons" class="container text-center">
            <button type="button" id="previousButton" class="btn btn-primary mb-1">Previous</button>
            <button id="nextButton" type="button" class="btn btn-primary mb-1">Next</button>
             <div id="filterBySeverity" class="mb-1">
                <label for="severityInputFilter" class="form-label">Severity: </label><input type="text" id="severityInputFilter" class="form-control mb-3"/>
                <button id="filterBySeverityButton" type="button" class="btn btn-primary">Show by severity</button>
            </div>
            <div id="filterByType" class="mb-1">
                <label for="typeInputFilter" class="form-label">Type: </label><input type="text" id="typeInputFilter" class="form-control mb-3" />
                <button id="filterByTypeButton" type="button" class="btn btn-primary">Show by type</button>
            </div>
            <button id="filterByUser" type="button" class="btn btn-primary">Show my logs</button>
            <button id="allLogsButton" type="button" class="btn btn-primary">Show All</button>
        </div>
        <div id="form">
            <div id="addForm">
                <h5>Add a log</h5>
                <div>
                    <label for="typeField" class="form-label">Type: </label><input type="text" id="typeField" class="form-control">
                </div>
                <div>
                    <label for="severityField" class="form-label">Severity: </label><input type="text" id="severityField" class="form-control">
                </div>
                <div>
                    <label for="dateField" class="form-label">Date: </label><input type="date" id="dateField" class="form-control">
                </div>
                <div>
                    <label for="logField" class="form-label">Log: </label><input type="text" id="logField" class="form-control">
                </div>
                <button id="insertLogButton" type="button" class="btn btn-primary mb-1">Add Log</button>
           </div>
           <div id="removeForm">
                <h5>Remove a log</h5>
                <div>
                    <label for="idField" class="form-label">Log id: </label><input type="number" id="idField" class="form-control">
                </div>
                <div id="removeLogButton" type="button" class="btn btn-primary mb-1">Remove Log</div>
           </div>
        </div>

        <div id="logoutForm">
            <button id="logoutButton" type="button" class="btn btn-primary mb-1"> Logout </button>
        </div>
    </body>
</html>